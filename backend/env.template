# Backend Environment Variables Template
# Copy this to .env for local development or .env.production for production

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration (supports both dev and prod)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://helppet.ai,https://www.helppet.ai
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# URLs
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000

# Local PostgreSQL (for development)
POSTGRESQL_URL=postgresql+asyncpg://postgres:password@localhost:5432/helppet_dev
POSTGRESQL_SYNC_URL=postgresql+psycopg2://postgres:password@localhost:5432/helppet_dev

# RDS Database Configuration (for production)
# RDS_HOSTNAME=your-rds-endpoint.region.rds.amazonaws.com
# RDS_PORT=5432
# RDS_DB_NAME=helppet_prod
# RDS_USERNAME=your_rds_username
# RDS_PASSWORD=your_rds_password

# External API Keys
# OPENAI_API_KEY=your_openai_key
# PINECONE_API_KEY=your_pinecone_key
PINECONE_INDEX_NAME=1536
OPENAI_EMBED_MODEL=text-embedding-3-small

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# AWS Configuration
AWS_REGION=us-west-1
AWS_DEFAULT_REGION=us-west-1
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Email Configuration (AWS SES)
FROM_EMAIL=hi@upcactus.com

# S3 Configuration for Audio Recordings
S3_BUCKET_NAME=helppet-audio-recordings
S3_RECORDINGS_PREFIX=recordings/
S3_PRESIGNED_URL_EXPIRATION=3600

# DynamoDB Configuration
DYNAMODB_VECTOR_TABLE=rag_vector_index
RAG_SOURCES_TABLE=rag_content_sources

# API Documentation (disable in production)
DOCS_URL=/docs
REDOC_URL=/redoc
